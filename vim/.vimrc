" Indent for C
set cindent

" Inclemental search
set incsearch

" print file name always
set laststatus=2

" Inclement alphabet by Ctrl a
set nf=alpha,hex

" print line number
set number

" Paste literally
set paste

" print cursor relative line number
set relativenumber

" print cursor position
set ruler

" Show command being entered
set showcmd

